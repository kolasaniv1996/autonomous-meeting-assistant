# Environment Variables for Autonomous Meeting Assistant

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SESSION_TIMEOUT=3600
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Email Configuration (for password reset and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_ADDRESS=noreply@meeting-assistant.com

# API Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
LOG_LEVEL=INFO
CORS_ORIGINS=*

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_PATH=/data/meeting_assistant.db

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_APP=app.py

# Integration API Keys (Optional - Configure in UI)
# JIRA_BASE_URL=https://your-domain.atlassian.net
# JIRA_USERNAME=your-email@example.com
# JIRA_API_TOKEN=your-jira-api-token

# GITHUB_TOKEN=ghp_xxxxxxxxxxxx
# GITHUB_USERNAME=your-github-username

# CONFLUENCE_BASE_URL=https://your-domain.atlassian.net/wiki
# CONFLUENCE_USERNAME=your-email@example.com
# CONFLUENCE_API_TOKEN=your-confluence-api-token

# TEAMS_TENANT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# TEAMS_CLIENT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# TEAMS_CLIENT_SECRET=your-client-secret

# AZURE_SPEECH_SUBSCRIPTION_KEY=your-azure-speech-key
# AZURE_SPEECH_REGION=eastus

# GOOGLE_CLOUD_PROJECT_ID=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Google OAuth Credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FRONTEND_REDIRECT_BASE_URL=http://localhost:5173 # Adjust to your frontend's actual dev port if different

# Security Settings
REQUIRE_2FA=false
PASSWORD_EXPIRY_DAYS=90
MAX_LOGIN_ATTEMPTS=5
SESSION_ENCRYPTION=true

# Backup Settings
AUTO_BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=local

# Meeting Settings
DEFAULT_MEETING_DURATION=60
AUTO_JOIN_MEETINGS=false
ENABLE_TRANSCRIPTION=true
ENABLE_RECORDING=false
MEETING_REMINDER_MINUTES=15

# System Settings
SYSTEM_TIMEZONE=UTC
SYSTEM_LANGUAGE=en
MAX_CONCURRENT_MEETINGS=10

# Notification Settings
EMAIL_NOTIFICATIONS=true
IN_APP_NOTIFICATIONS=true
WEBHOOK_NOTIFICATIONS=false
WEBHOOK_URL=
NOTIFICATION_FREQUENCY=immediate

